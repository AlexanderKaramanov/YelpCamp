<%- include("../partials/header") %>

<div class="row">
    <h1 style="text-align: center">Edit <%= user.username %>'s profile</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" label="username" value="<%= user.username %>">
            </div>
			<div class="form-group">
                <input class="form-control" type="text" name="user[firstName]" label="firstName" value="<%= user.firstName %>">
            </div>
			<div class="form-group">
                <input class="form-control" type="text" name="user[lastName]" label="lastName" value="<%= user.lastName %>">
            </div>
			<div class="form-group">
                <input class="form-control" type="email" name="user[email]" label="email" value="<%= user.email %>">
            </div>
			<div class="form-group">
                <input class="form-control" type="text" name="user[avatar]" label="avatar" value="<%= user.avatar %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update Profile</button>
            </div>
        </form>
        <a href="/users/<%= user._id %>">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>