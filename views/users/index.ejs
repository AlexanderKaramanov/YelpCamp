<%- include("../partials/header"); %>

<div class="row">
	<div class="col-md-12">
		<h2>
			Welcome to the Admin Panel <%= currentUser.username %>
		</h2>
		<hr>
		<div class="panel panel-default">
			<div class="panel-heading">All YelpCamp Users</div>
			<table class="table table-hover">
				<tr>
					<th>Username</th>
					<th>First name</th>
					<th>Last name</th>
					<th>Email</th>
					<th>Is admin</th>
					<th>Profile</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
				<% users.forEach(function(user){ %>
				<tr>
					<td><%= user.username %></td>
					<td><%= user.firstName %></td>
					<td><%= user.lastName %></td>
					<td><%= user.email %></td>
					<td><%= user.isAdmin %></td>
					<td><a class="btn btn-sm btn-info" href="/users/<%= user._id %>">Profile</a></td>
					<td><a class="btn btn-sm btn-warning" href="/users/<%= user._id %>/edit">Edit</a></td>
					<td>
						<form class="delete-form" action="/users/<%= user._id %>?_method=DELETE" method="POST">
							<button class="btn btn-sm btn-danger">Delete</button>
						</form>
					</td>
				</tr>
				<% }); %>
			</table>
		</div>
	</div>
</div>

<%- include("../partials/footer"); %>